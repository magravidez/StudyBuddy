<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/background">

    <ScrollView
        android:id="@+id/session_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <View
                android:id="@+id/sessiontypebg"
                android:background="@drawable/background"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="1080px"
                android:layout_height="2400px" />

            <ImageView
                android:id="@+id/studybuddylogo"
                android:src="@drawable/studybuddylogo"
                android:contentDescription="studybuddylogo"
                android:layout_marginStart="63dp"
                android:layout_marginTop="31dp"
                android:layout_width="234.64dp"
                android:layout_height="210dp" />

            <TextView
                android:id="@+id/sessiontypequestion"
                android:layout_width="282dp"
                android:layout_height="66dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="240dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="@string/sessiontypequestion"
                android:textColor="@color/textcolor"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/sessiontypeoptions"
                android:layout_marginTop="320dp"
                android:layout_marginStart="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:id="@+id/onlinerl"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/online"
                        android:layout_width="180dp"
                        android:layout_height="79dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/buttonbg"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="@string/online"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/facetofacerl"
                    android:layout_marginTop="84dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/facetoface"
                        android:layout_width="180dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/buttonbg"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="@string/facetoface"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bothrl"
                    android:layout_marginTop="121dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/both"
                        android:layout_width="180dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/buttonbg"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="@string/both"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/back_button"
                android:layout_marginTop="574dp"
                android:layout_marginStart="143dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/backbutton"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="backbutton"
                    android:src="@drawable/backbutton" />

                <TextView
                    android:id="@+id/back"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="@string/back"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</HorizontalScrollView>